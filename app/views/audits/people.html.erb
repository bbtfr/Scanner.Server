<h2 class="page-header">
  审计记录
</h2>

<div class="row">
  <div class="col-md-3">
    <ul class="nav nav-pills nav-stacked">
      <li><%= link_to("认证接口调用记录", identify_audit_path) %></li>
      <li class="active"><%= link_to("认证人员记录", people_audit_path) %></li>
    </ul>
  </div>

  <div class="col-md-9 data-table">
    <% blank = '<span class="blank">未知</span>'.html_safe %>
    <%= wice_index_for @people, class: "table table-striped table-hover" do |i| %>
      <%= i.attribute :name %>
      <%= i.attribute :id_number, format: :watermark %>
      <%= i.attribute :created_at, format: :short %>
      <%= i.attribute :updated_at, format: :short %>
      <%= i.attribute :identify_callings_count %>
      <%= i.attribute :accepted_identify_callings_count %>
    <% end %>
  </div>
</div>
