    <div class="container">
      <div id="falsh-messages" data-turbolinks-permanent>
        <%= flash_messages %>
      </div>

      <!-- Main component for a primary marketing message or call to action -->
      <%= yield %>

    </div> <!-- /container -->
  </body>
</html>
